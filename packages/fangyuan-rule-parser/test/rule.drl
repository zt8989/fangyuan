package feeLock

@typescript {
	"import User from '@/knownledage/User'" 
	"import FeeItem from '@/knownledage/FeeItem'" 
	"export declare const rule: (ctx: { user: User, feeItem: FeeItem }) => ({ evaluate: () => boolean, execute: () => [number, string] })" 
}

desc "费用锁定规则"
mode "concurrent"
target "commonjs"

	// 规则1
rule "华南地区"
	when 
		User(orgName == "华南公司" && roleName == "航管") // 当公司名称叫华南公司，角色叫航管
		FeeItem(orgId in ["1223", "123"]) // 这条费用的对应的公司id 在"1223", "123"里面
	then 
		0, "" // 表示不锁定费用，可以编辑
end

ruleset "非业务主体"
	mode "sort"
	rule "非业务主体锁定"
		when 
			User($orgIds: orgIds) // 取出用户中的所有关联公司
			FeeItem(orgId not in $orgIds) // 这条费用的对应的公司id 不在用户的关联公司里面
		then 
			1, "不同业务主体锁定" // 锁定，返回消息
	end
end

rule "子单锁定"
	when 
		FeeItem(splitBillType == "child") 
	then 
		1, "字段锁定"
end

